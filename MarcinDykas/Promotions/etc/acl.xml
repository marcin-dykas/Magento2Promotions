            <resource id="MarcinDykas_Promotions::promotion" title="Promotions Management" sortOrder="20">
                <resource id="MarcinDykas_Promotions::promotion_view" title="View Promotions" sortOrder="10"/>
                <resource id="MarcinDykas_Promotions::promotion_save" title="Save Promotions" sortOrder="20"/>
                <resource id="MarcinDykas_Promotions::promotion_delete" title="Delete Promotions" sortOrder="30"/>
            </resource>
        </resource>
    </resources>
</acl>
</config>
