<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
<acl>
    <resources>
        <resource id="Magento_Backend::admin">
            <resource id="MarcinDykas_Promotions::group" title="Groups Management" sortOrder="10">
                <resource id="MarcinDykas_Promotions::group_view" title="View Groups" sortOrder="10"/>
                <resource id="MarcinDykas_Promotions::group_save" title="Save Groups" sortOrder="20"/>
